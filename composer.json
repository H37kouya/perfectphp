{
    "name": "h37kouya/perfectphp",
    "description": "The perfectphp Framework.",
    "require": {
        "php": ">=7.2.0",
        "vlucas/phpdotenv": "^3.5"
    },
    "require-dev": {
        "filp/whoops": "^2.5"
    },
    "autoload": {
        "files": [
            "Core/Helpers.php",
            "App/Helpers.php"
        ],
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/",
            "App\\Controllers\\": "app/Controllers",
            "App\\Models\\": "app/Models"
        }
    }
}
